<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/film_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/film_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/zootopia"
            />

        <View
            android:id="@+id/watch_later_background"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/watch_later_background"
            android:layout_marginTop="95dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/dare_time_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/watch_later_background"
            app:layout_constraintBottom_toBottomOf="@id/watch_later_background"
            app:layout_constraintStart_toStartOf="@id/watch_later_background"
            app:layout_constraintEnd_toEndOf="@id/watch_later_background"
            android:layout_marginBottom="20dp"
            android:textColor="?attr/colorAccent"
            android:text="@string/viewing_sheduled_for"
            android:textAlignment="center"
            android:textSize="12sp"
            />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/favourite_checkbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:button="@drawable/favourite_checkbox_inset"
            android:buttonTint="?attr/colorAccent"
            android:background="@drawable/favourite_checkbox_background"
            android:layout_marginTop="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/film_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:lines="2"
            android:textColor="?attr/colorAccent"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toBottomOf="@id/film_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Карты, деньги,\n два ствола"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>